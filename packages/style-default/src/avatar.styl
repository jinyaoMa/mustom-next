@import '../define.styl'

.mn-avatar
  display inline-block
  font-size $fontBase
  background var(--color-text-placeholder)
  color var(--color-white)
  text-align center
  border-radius $borderRadiusLarge
  overflow hidden
  &.square
    border-radius $borderRadiusNone
  &.round
    border-radius 25%
  &.circle
    border-radius 50%
  > img
    display block
    height 100%
    vertical-align middle