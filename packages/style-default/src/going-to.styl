@import '../define.styl'

.mn-going-to
  position absolute
  right 0
  bottom 0
  pointer-events none
  display flex
  flex-direction column
  align-items center
  font-size $fontBase
  .btn
    box-sizing border-box
    border $borderDashed var(--color-primary-8)
    background-color var(--color-white)
    border-radius: $borderRadiusLarge * 2
    pointer-events auto
    cursor pointer
    display flex
    flex-direction row
    justify-content center
    align-items center
    overflow hidden
    color var(--color-text-primary)
    transition color 0.2s, background 0.6s, border-color 0.6s
    &:hover, &:focus
      border-style solid
      border-color var(--color-primary-2)
      color var(--color-primary-0)