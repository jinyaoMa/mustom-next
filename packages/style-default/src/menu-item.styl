@import '../define.styl'

.mn-menu-item
  display block
  text-decoration none
  padding $fontExtraLarge
  font-size $fontBase
  line-height $lineHeightNone
  color var(--color-text-primary)
  opacity 0.5
  transition 0.2s
  position relative
  &:before
    content ''
    position absolute
    bottom 0
    left 0
    width 100%
    height 0
    background var(--color-primary-1)
    transition 0.2s
  &:hover, &:focus, &.active, &.exactActive
    opacity 1
  &.exactActive:before
    height: $fontExtraLarge * 0.1