@import '../define.styl'

.mn-panel-piece
  position relative
  border-radius: $borderRadiusLarge * 2
  cursor pointer
  overflow hidden
  transition 0.2s
  filter brightness(0.8)
  &.active, &:hover
    filter brightness(1)
  &.active
    box-shadow 0 0 2px 4px var(--color-primary-0)

.mn-panel-piece-label
  font-size $fontExtraLarge
  width 100%
  height 100%
  display flex
  flex-direction row
  justify-content center
  align-items center
  text-align center