@import '../define.styl'

.mn-audio
  position relative
  .mn-audio-left
    box-sizing border-box
  .mn-audio-button
    display inline-block
    cursor pointer
    user-select none
    transition background-color 0.2s
    &:hover
      background-color var(--color-border-light)
  .mn-audio-right
    text-align center
    overflow hidden
    cursor pointer
    position relative
    box-shadow 0 0 1px
  .mn-audio-cover
    width 100%
    height @width
    background-position center center
    background-repeat no-repeat
    background-size cover
    background-color var(--color-border-light)
    position absolute
  .mn-audio-icon
    position relative
    text-shadow -1px 1px var(--color-white)
  .mn-audio-list
    position absolute
    overflow-x hidden
    overflow-y auto
    background-color var(--color-white)
    box-shadow 0 0 1px
    &::-webkit-scrollbar
      width 6px
      height 0
    &::-webkit-scrollbar-thumb
      border-radius $borderRadiusLarge
      background-color var(--color-text-regular)
  .mn-audio-list-item
    padding 8px 0
    white-space nowrap
    border-bottom $borderSolid var(--color-border-light)
    cursor pointer
    > span
      &:nth-child(1)
        padding 0 0.5em
      &:nth-child(2)
        min-width min-content
      &:nth-child(3)
        padding-left 0.5em
        opacity 0.8
        overflow-x hidden
        text-overflow ellipsis
        &:before
          content '- '
    &:hover
      background-color var(--color-border-extra-light)
    &.mn-audio-highlight
      background-color var(--color-border-lighter)