@import '../define.styl'

.mn-container
  position relative
  box-sizing border-box
  color var(--color-text-primary)
  font-size $fontBase
  line-height $lineHeightNormal
  .mn-scrollbar
    position absolute
    right 0
    user-select none
    box-sizing border-box
    transition opacity 0.2s
    overflow hidden
    opacity 0
    &:hover, &.show
      opacity 1
    &.vertical
      top 0
      height 100%
      padding 2px 3px 2px 1px
      .mn-scrollbar-thumb
        width $scrollbar
        height 100%
    &.horizontal
      bottom 0
      width 100%
      padding 1px 2px 3px
      .mn-scrollbar-thumb
        height $scrollbar
        width 100%
    .mn-scrollbar-thumb
      background-color var(--color-text-secondary)
      transition opacity 0.2s, height 0.2s, width 0.2s
      opacity 0.5
      &:hover
        opacity 1
      &.round
        border-radius $scrollbarRadius

.mn-container-inner
  position relative
  display flex
  height 100%
  width 100%
  overflow auto
  overflow -moz-scrollbars-none
  -ms-overflow-style none
  box-sizing border-box
  &::-webkit-scrollbar
    width 0 !important
    height 0 !important
  &.vertical
    flex-direction column
  &.horizontal
    flex-direction row